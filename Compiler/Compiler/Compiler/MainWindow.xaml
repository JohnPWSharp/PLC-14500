<Window x:Class="Compiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="146*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="buttonProgram" Content="Program" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="422,21,0,0" Click="buttonProgram_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textSource" HorizontalAlignment="Left" Height="321" TextWrapping="Wrap" VerticalAlignment="Top" Width="403" FontFamily="Courier New" FontSize="14" AcceptsReturn="True" Margin="0,0,0,-0.333"/>
        <DockPanel HorizontalAlignment="Left" Height="179" LastChildFill="False" VerticalAlignment="Top" Width="198" Margin="32,21,0,0"/>
    </Grid>

</Window>
